@model EventDetailsDto
@{
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width; initial-scale=1.0"/>

    <!-- Client Side Validation using JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    </head>
    <body>
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5">Edit Event Price</h2>
            <hr />

            <form method="post">

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Id</label>
                    <div class="col-sm-8">
                        <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Event Category</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="EventCategory" value="@Model.EventCategory" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">New Price</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="EventPayment">
                        <span asp-validation-for="EventPayment" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-warning" asp-controller="ManageBookings" asp-action="Dashboard" role="button">Cancel</a>
                    </div>

                </div>

            </form>

        </div>
    </div>
    </body>
</html>