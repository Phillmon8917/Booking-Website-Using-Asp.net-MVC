    <script src="~/NewFolder/js/jquery.min.js"></script>
    <script src="~/NewFolder/js/bootstrap.bundle.min.js"></script>
    <script src="~/NewFolder/js/jquery-3.0.0.min.js"></script>
    <script src="~/NewFolder/js/custom.js"></script>

